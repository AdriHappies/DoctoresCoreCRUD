@model List<Doctor>



<table class="table table-dark">
    <thead>
        <tr>
            <th>Número</th>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Doctor doc in Model)
        {
            <tr>
                <td>@doc.Numero</td>
                <td>@doc.Apellido</td>
                <td>@doc.Especialidad</td>
                <td>@doc.Salario</td>
                <td>
                    <a class="btn btn-info"
                       asp-controller="Doctores"
                       asp-action="Details"
                       asp-route-iddoctor="@doc.Numero">
                        Detalles
                    </a>
                    <a class="btn btn-info"
                       asp-controller="Doctores"
                       asp-action="Edit"
                       asp-route-iddoctor="@doc.Numero">
                        Editar
                    </a>
                    <a class="btn btn-danger"
                       asp-controller="Doctores"
                       asp-action="Delete"
                       asp-route-iddoctor="@doc.Numero">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

